<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:id="@+id/cardPeriodLengthText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 Minutes"
                    android:layout_alignBaseline="@+id/cardTeacherText" android:layout_alignBottom="@+id/cardTeacherText" android:layout_alignParentEnd="true"/>
            <TextView
                    android:id="@+id/cardTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:30"
                    android:layout_alignParentEnd="true" tools:layout_alignParentTop="false" android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/cardSubjectText"/>
            <TextView
                    android:id="@+id/cardTeacherText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class 105"
                    android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
            <TextView
                    android:id="@+id/cardClassLocation"
                    android:text="Mr Eggleton"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium" android:textSize="15sp"
                    android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
            <TextView
                    android:id="@+id/cardSubjectText"
                    android:layout_width="340px"
                    android:layout_height="wrap_content"
                    android:text="Subject"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    android:textSize="17sp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>